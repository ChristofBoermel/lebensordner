{
  "schemaVersion": 36,
  "version": 1,
  "uid": "bullmq-queues",
  "title": "BullMQ Queue Metrics",
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Queue Depth",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "options": {},
      "targets": [
        {
          "refId": "A",
          "expr": "bullmq_jobs_waiting{queue=~\".+\"}",
          "legendFormat": "{{queue}} waiting"
        },
        {
          "refId": "B",
          "expr": "bullmq_jobs_active{queue=~\".+\"}",
          "legendFormat": "{{queue}} active"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Failed Jobs",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "options": {},
      "targets": [
        {
          "refId": "A",
          "expr": "bullmq_jobs_failed{queue=~\".+\"}",
          "legendFormat": "{{queue}}"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Completed Jobs / Hour",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "options": {},
      "targets": [
        {
          "refId": "A",
          "expr": "increase(bullmq_jobs_completed{queue=~\".+\"}[1h])",
          "legendFormat": "{{queue}}"
        }
      ]
    }
  ]
}
