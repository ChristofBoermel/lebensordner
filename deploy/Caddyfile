  {
        email {$ACME_EMAIL:admin@lebensordner.org}
        admin :2019
        metrics
  }

  lebensordner.org, www.lebensordner.org {
        @www host www.lebensordner.org
        redir @www https://lebensordner.org{uri} 308

        reverse_proxy nextjs:3000

        handle_path /supabase/* {
                reverse_proxy kong:8000
        }

        encode gzip zstd

        header {
                -Server
                X-Content-Type-Options nosniff
                X-Frame-Options DENY
                Referrer-Policy strict-origin-when-cross-origin
        }
  }

  studio.lebensordner.org {
        basic_auth {
                {$STUDIO_USER} {$STUDIO_PASSWORD_HASH}
        }
        reverse_proxy studio:3000
  }

  grafana.lebensordner.org {
        basic_auth {
                {$GRAFANA_USER} {$GRAFANA_PASSWORD_HASH}
        }
        reverse_proxy grafana:3000
  }
  
